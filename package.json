{
  "name": "openrouter-electron-app",
  "version": "0.1.3",
  "private": true,
  "type": "module",
  "description": "Electron + Vite + React + Tailwind desktop client for OpenRouter API",
  "main": "dist-electron/main.cjs",
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AshkanHovold/openrouter-desktop.git"
  },
  "bugs": {
    "url": "https://github.com/AshkanHovold/openrouter-desktop/issues"
  },
  "homepage": "https://github.com/AshkanHovold/openrouter-desktop#readme",
  "scripts": {
    "dev": "concurrently -k 'npm:dev:renderer' 'npm:dev:electron' 'npm:dev:electron-build'",
    "dev:renderer": "vite",
    "dev:electron-build": "node scripts/build-electron-watch.js",
    "dev:electron": "wait-on tcp:5173 && wait-on dist-electron/preload.cjs && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "run-s build:renderer build:electron",
    "build:renderer": "vite build",
    "build:electron": "node scripts/build-electron.js",
    "dist": "npm run build && electron-builder --publish never",
    "dist:all": "npm run build && electron-builder -mwl --publish never",
    "release": "npm run build && electron-builder -mwl",
    "release:github": "npm run build && electron-builder -mwl --publish always",
    "tag:current": "bash scripts/release/tag-current.sh",
    "tag:patch": "bash scripts/release/bump-and-tag.sh patch",
    "tag:minor": "bash scripts/release/bump-and-tag.sh minor",
    "tag:major": "bash scripts/release/bump-and-tag.sh major",
    "tag:retag": "bash scripts/release/retag-latest.sh vLATEST",
    "lint": "eslint --ext .ts,.tsx src",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview"
  },
  "dependencies": {
    "dompurify": "^3.1.6",
    "idb": "^8.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.3",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.10",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^6.1.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.0",
    "vite": "^7.1.9",
    "wait-on": "^7.2.0"
  }
}
